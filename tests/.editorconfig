[*.cs]

# Async test methods follow MethodName_Scenario_Expected convention, not Async suffix
dotnet_naming_rule.async_methods_end_in_async.severity = none

# Test method naming convention uses underscores
dotnet_diagnostic.CA1707.severity = none

# Test classes must be public for xUnit discovery
dotnet_diagnostic.CA1515.severity = none

# Test fixture classes are instantiated by DI/xUnit, not directly
dotnet_diagnostic.CA1812.severity = none

# ConfigureAwait not needed in test projects
dotnet_diagnostic.CA2007.severity = none

# Using interface types intentionally in tests for DI resolution
dotnet_diagnostic.CA1859.severity = none
